{
    "manifest_version": 2,
    "name": "Doomscroll...NOT",
    "version": "1.0",

    "description": "Asks you whether you truly want to continue to a website.",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "*://*/*"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_title": "Doomscroll...NOT",
        "default_popup": "popup/popup.html"
    }
}